<%- include('components/head') %>
<%- include('components/header') %>
<div class="container">
    <div class="d-flex justify-content-between">
    <h1>Users</h1>
    <button class="btn btn-primary m-2 create-modal" data-bs-toggle="modal" data-url="user" data-bs-target="#formModal"><i class="fa-solid fa-plus"></i></button>
    </div>
    <table class="table" id="users-table">
        <thead class="table-dark">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Mobile</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user){ %>
          <tr id="row-<%= user.id %>">
            <td><%= user.name %></td>
            <td><%= user.mobile %></td>
            <td><%= user.email %></td>
            <td>
              <i data-url='user?id=<%= user.id %>' class="fa-solid fa-pencil edit"></i>
              <i data-url='user?id=<%= user.id %>' class="fa-solid fa-trash-can text-danger delete"></i>
            </td>
          </tr>
        <%})%>
        </tbody>

      </table>
</div>
  
  <!-- Modal -->
  <div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/api/create/user" method="post">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">User <span>Create</span></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" name="name" class="form-control">
          </div>
          <div class="mb-3">
            <label class="form-label">Mobile</label>
            <input type="number" name="mobile" class="form-control">
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      </div>
    </div>
  </div>
<%- include('components/scripts') %>
    